.main
  .background-picture
    .middle-box
      .form-area
        %h2 Log in
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .field
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "current-password"
          - if devise_mapping.rememberable?
            .field#remember
              = f.check_box :remember_me
              = f.label :remember_me
          .actions
            = f.submit "Log in"
        = render "devise/shared/links"

      = image_tag("signin-logo.png", size: '480x99', class: "logo-message")
  
    .test-loginform
      %h5 テストログイン用アカウントです
      .test-loginform__test
        %span.test-loginform__test--title メールアドレス：
        %strong.test-loginform__test--account test@gmail.com
      .test-loginform__test
        %span.test-loginform__test--title パスワード：
        %strong.test-loginform__test--account testtest

    
